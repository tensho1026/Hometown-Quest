generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id 
  username  String?
  imageUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt // updateAtをupdatedAtに修正
  quests    Quest[] // リレーションのリストフィールドを明示的に定義
  myHometown String?
}

model Quest {
  id                    String              @id @default(uuid())
  isCompleted           Boolean             @default(false)
  assignedDate          DateTime            @default(now()) // 💡 クエストが割り当てられた日付

  
  // Userとのリレーション
  userId                String
  user                  User                @relation(fields: [userId], references: [id])

  // MstTodaysQuestとのリレーション
  mstTodaysQuestId      Int?
  mstTodaysQuest        MstTodaysQuest?     @relation(fields: [mstTodaysQuestId], references: [id])

  // MstThisWeekQuestとのリレーション
  mstThisWeekQuestId    Int?
  mstThisWeekQuest      MstThisWeekQuest?   @relation(fields: [mstThisWeekQuestId], references: [id])
}

model MstTodaysQuest {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String   @unique
  description String
  type        String
  timer       String
  level       String
  point       Int
  category    String
  assignedTo  Quest[] // Questモデルへのバックリレーション
}

model MstThisWeekQuest {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String   @unique
  description String
  type        String
  timer       String
  level       String
  point       Int
  category    String
  assignedTo  Quest[] // Questモデルへのバックリレーション
}